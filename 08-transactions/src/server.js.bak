import express from 'express';
import apiRouter from './routes/index.js';

const app = express();
const PORT = 3000;

app.use(express.json());
app.use('/api', apiRouter);

app.get('/', (req, res) => {
  res.send('Hello, World!');
});

app.listen(PORT, () => {
  console.log(`Server is running at http://localhost:${PORT}`);
});